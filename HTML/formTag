    <form action="test.html" method="post">
        <p><label for="textInput">text : </label><input id="textInput" type="text" name="input1" maxlength="5" size="5" required></p>
        <p><label>password : <input type="password" name="input2"></label></p>
        <p>hidden : <input type="hidden" name="input3"></p>
        <p>button : <input type="button" value="눌러봐" onclick="btnClick()"></p>
        <p>
            checkbox :
            <br>
            <input type="checkbox" name="hobby" value="야구">야구직관
            <input type="checkbox" name="hobby" value="축구">축구직관
            <input type="checkbox" name="hobby" value="농구">농구직관
            <input type="checkbox" name="hobby" value="배구">배구직관
        </p>
        <p>
            radio :
            <br>
            <input type="radio" name="hobby" value="야구">야구직관
            <input type="radio" name="hobby" value="축구">축구직관
            <input type="radio" name="hobby" value="농구">농구직관
            <input type="radio" name="hobby" value="배구">배구직관
            <!-- 라디오는 name이 같아야 중복체크 방지가 된다 -->
        </p>

        <p>
            사용자 성별 체크 :
            <br>
            <input type="radio" name="gender" value="M">남자
            <input type="radio" name="gender" value="F">여자
            <!-- 라디오는 name이 같아야 중복체크 방지가 된다 -->
        </p>
        <p>
            file : <input type="file" name="file">
        </p>
        <p>
            files : <input type="file" name="file" multiple>
        </p>
        <p>
            only image file : <input type="file" name="file" accept=".gif,.jpg">
        </p>
        <hr>
        <p>
            submit : <input type="submit" value="제출">
            reset : <input type="reset" value="초기화">
        </p>
