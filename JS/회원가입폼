    <script>
        function resetStyle() {
            var id = document.getElementById("id");
            var pw = document.getElementById("pw");
            var pw_re = document.getElementById("pw_re");
            var name = document.getElementById("name");
            var phone1 = document.getElementById("phone1");
            var phone2 = document.getElementById("phone2");
            var phone3 = document.getElementById("phone3");
            var email = document.getElementById("email");            
            
            var popId = document.getElementById("popId");
            var popPw = document.getElementById("popPw");
            var popPwRe = document.getElementById("popPwRe");
            var popName = document.getElementById("popName");
            var popPhone = document.getElementById("popPhone");
            var popEmail = document.getElementById("popEmail");
            
            styleReset(id);
            styleReset(pw);
            styleReset(pw_re);
            styleReset(name);
            styleReset(email);
            styleResetPhone(phone1);
            styleResetPhone(phone2);
            styleResetPhone(phone3);   
 
            htmlReset(popId);
            htmlReset(popPw);
            htmlReset(popPwRe);
            htmlReset(popName);
            htmlReset(popEmail);
            htmlReset(popPhone);

            
        }
        
        function styleReset(id) {
            id.style.border = "1px solid gray";
            id.style.border.width = "2px";
            id.style.width = "302px";
            id.style.height = "30px";            
        }        
        function htmlReset(id) {
            id.innerHTML = " ";
        }
 
        function styleResetPhone(id) {
            id.style.border = "1px solid gray";
            id.style.border.width = "2px";
            id.style.width = "95px";
            id.style.height = "30px";            
        } 
        
        function test() {
            var id = document.getElementById("id");
            var pw = document.getElementById("pw");
            var pw_re = document.getElementById("pw_re");
            var name = document.getElementById("name");
            var phone1 = document.getElementById("phone1");
            var phone2 = document.getElementById("phone2");
            var phone3 = document.getElementById("phone3");
            var email = document.getElementById("email");
            
            var popId = document.getElementById("popId");
            var popPw = document.getElementById("popPw");
            var popPwRe = document.getElementById("popPwRe");
            var popName = document.getElementById("popName");
            var popPhone = document.getElementById("popPhone");
            var popEmail = document.getElementById("popEmail");

            var regExpId;
            var regExpPw;
            var regExpName;
            var regExpPhone2;
            var regExpPhone3;
            var regExpEmail;
           
            styleReset(id);
            styleReset(pw);
            styleReset(pw_re);
            styleReset(name);
            styleReset(email);
            styleResetPhone(phone1);
            styleResetPhone(phone2);
            styleResetPhone(phone3);
            
            htmlReset(popId);
            htmlReset(popPw);
            htmlReset(popPwRe);
            htmlReset(popName);
            htmlReset(popEmail);
            htmlReset(popPhone);
          
            regExpId = /^[a-z0-9]{4,12}$/;
            regExpPw = /^[a-zA-Z0-9]{8,12}$/;
            regExpName = /^[가-힣]/;
            regExpPhone2 = /^[0-9]{3,4}$/;
            regExpPhone3 = /^[0-9]{4,4}$/;
            regExpEmail = /^[a-zA-Z0-9]{4,12}[@].+$/;
            
            var pass = true;

            if (!regExpId.test(id.value)) {
                id.style.border="2px solid red";
                popId.innerHTML = "ID는 영어 소문자, 숫자만 4~12글자";
                pass = false;
            }
            if (!regExpPw.test(pw.value)) {
                pw.style.border="2px solid red";
                popPw.innerHTML = "PW 영어 소문자, 대문자, 숫자 8~12자리";
                pass = false;
            }
            if (pw.value != pw_re.value){
                pw.style.border="2px solid red";
                pw_re.style.border="2px solid red";
                popPwRe.innerHTML = "비밀번호와 비밀번호 확인은 같아야 합니다.";
                pass = false;
            }
            if (!regExpName.test(name.value)) {
                name.style.border="2px solid red";
                popName.innerHTML = "이름은 한글로 1글자 이상";
                pass = false;
            }
            if (phone1.value != "010" || !regExpPhone2.test(phone2.value) || !regExpPhone3.test(phone3.value)) {
                phone1.style.border="2px solid red";
                phone2.style.border="2px solid red";
                phone3.style.border="2px solid red";
                popPhone.innerHTML ="전화번호 첫 번째는 010만, 두 번째는 3자리 이상만 가능";
                pass = false;
            }
            if (!regExpEmail.test(email.value)) {
                email.style.border="2px solid red";
                popEmail.innerHTML = "Email은 @를 포함, @앞은 영어, 숫자 4~12자리만 가능";
                pass = false;
            }
            return pass;
        }


