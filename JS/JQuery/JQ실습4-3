    <script>
        var result = true;
        
        $(function () {
            $(".t1 tr td>input").focusin(function() {
//                console.log($(this).prev().prev().html());
                $(this).prev().prev().animate({
                    top:'0px'
                });
            });
//            $(".t1 tr td>input").blur(function() {
//                $(this).prev().prev().animate({
//                    top:'25px'
//                });
//            });
            $("#userId").blur(function() {
                var input = $(this).val();
                var exp = /^[a-zA-Z][a-zA-Z0-9]{3,11}$/;
                if(exp.test(input)) {
                    $(this).prev().css("display", "none");
                } else {
                    $(this).prev().css("display", "block");
                    result = false;
                }
                if(input=="") {
                    $(this).prev().prev().animate({
                        top:'25px'
                    });
                }
            });
            $("#userName").blur(function() {
                var input = $(this).val();
                var exp = /^[가-힣]{2,4}$/;
                if(exp.test(input)) {
                    $(this).prev().css("display", "none");
                } else {
                    $(this).prev().css("display", "block");
                    result = false;
                }
                if(input=="") {
                    $(this).prev().prev().animate({
                        top:'25px'
                    });
                }
            });
            $("#uPW").blur(function() {
                var input = $(this).val();
                var exp = /^[a-zA-Z0-9]{6,18}$/;
                if(exp.test(input)) {
                    $(this).prev().css("display", "none");
                } else {
                    $(this).prev().css("display", "block");
                    result = false;
                }
                if(input=="") {
                    $(this).prev().prev().animate({
                        top:'25px'
                    });
                }
            });
            $("#uPWD").blur(function() {
                var input = $(this).val();
                var pw = $("#uPW").val();
                if(input==pw) {
                    $(this).prev().css("display", "none");
                } else {
                    $(this).prev().css("display", "block");
                    result = false;
                }
                if(input=="") {
                    $(this).prev().prev().animate({
                        top:'25px'
                    });
                }
            });
            $("#uEmail").blur(function() {
                var input = $(this).val();
                var exp = /^[a-zA-Z0-9]+[@][a-zA-Z0-9]+$/;
                if(exp.test(input)) {
                    $(this).prev().css("display", "none");
                } else {
                    $(this).prev().css("display", "block");
                    result = false;
                }
                if(input=="") {
                    $(this).prev().prev().animate({
                        top:'25px'
                    });
                }
            });            
            $("#uPhone").blur(function() {
                var input = $(this).val();
                var exp = /^[0-9]{3}[-][0-9]{4}[-][0-9]{4}$/;
                if(exp.test(input)) {
                    $(this).prev().css("display", "none");
                } else {
                    $(this).prev().css("display", "block");
                    result = false;
                }
                if(input=="") {
                    $(this).prev().prev().animate({
                        top:'25px'
                    });
                }
            });
            $("#uAddr").blur(function() {
                var input = $(this).val();
                if(input=="") {
                    $(this).prev().prev().animate({
                        top:'25px'
                    });
                }
            });
            
            
        });
